<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background for the button -->
    <item android:drawable="@color/bordercolor"

        />


    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="2dp"
                android:color="@color/white"


                />

        </shape>
    </item>

    <!-- Inner circle for the button content -->
    <item android:top="2dp" android:right="2dp" android:bottom="2dp" android:left="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/bordercolor"

                />

        </shape>
    </item>
</layer-list>
