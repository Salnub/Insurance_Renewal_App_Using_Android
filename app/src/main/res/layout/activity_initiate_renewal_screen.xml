<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Initiate_renewal_screen"
    android:background="@drawable/startrenewal"
    >

    <TextView
        android:id="@+id/textVi"
        android:layout_width="350dp"


        android:layout_height="30dp"
        android:background="@color/bordercolor"
        android:text="INITIATE RENEWAL PROCESS"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_start_renewal"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:text="START \nRENEWAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textVi"
        app:layout_constraintVertical_bias="0.235"
        android:background="@color/white"
        android:textSize="40sp"
        />

    <Button
        android:id="@+id/btn_initiate_renewal_back"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:text="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_renewal"
        android:background="@color/green"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textAlignment="center"
        />


</androidx.constraintlayout.widget.ConstraintLayout>