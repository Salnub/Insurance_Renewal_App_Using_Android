<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Thank_You_Screen">

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thank You For Choosing Taawun Insurance Service"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        android:textSize="40sp"
        android:textAlignment="center"
        android:textColor="@color/yellow"
        android:background="@color/bordercolor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.31" />

    <TextView
        android:id="@+id/text_view_22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We'll get back to you as soon as possible or you'll receive our call in 24hours for confirmation or if any more details are needed."
        app:layout_constraintBottom_toBottomOf="parent"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView31"
        app:layout_constraintVertical_bias="0.172"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:background="@color/yellow"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_home"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_22"
        android:text="Go to Home"
        android:textColor="@color/yellow"
        android:background="@color/bordercolor"
        android:textSize="20sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>